{
    "compilerOptions": {
      "module": "NodeNext",
      "moduleResolution": "NodeNext",
      "target": "ES6",
      "esModuleInterop": true,
      "strict": true,
      "rootDir": "./src",
      "outDir": "./dist",
      "typeRoots": ["./src/types", "./node_modules/@types"],
      "skipLibCheck": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
  }